@model IEnumerable<LAB_2___ABB.Models.DrugModel>

@{
    ViewBag.Title = "TreeStatus";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TreeStatus</title>
</head>
<body>
    <div>
        <h2>TreeStatus</h2>
    </div>

    <table>
        <tr>
            <th>
                @using (Html.BeginForm("Pre", "Drug"))
                {
                    <input id="PreO" type="submit" value="Pre Order" class="btn btn-default" />

                }
            </th>

            <th>
                @using (Html.BeginForm("Post", "Drug"))
                {
                    <input id="PostO" type="submit" value="Post Order" class="btn btn-default" />

                }
            </th>

            <th>
                @using (Html.BeginForm("In", "Drug"))
                {
                    <input id="InO" type="submit" value="In Order" class="btn btn-default" />

                }
            </th>

        </tr>
    </table>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }

    </table>

</body>
</html>
